/* Unit Long Address */
-DMY_ADDRESS=0x00000001

/* Broadcast Address */
-DBROADCAST_ADDRESS=0x0

/* Maximum number of connected nodes */
-DMAX_NUM_OF_NODES=20

/* Maximum number of failed TX */
-DMAX_NUM_FAILED=5

/* Maximum size of application payload. */
-DAPP_PAYLOAD_SIZE=7

/* Maximum size of Network application payload. Do not change unless
 * protocol changes are reflected in different maximum network
 * application payload size.
 */
-DMAX_NWK_HEADER=4

/* Maximum size of Mac payload. */
-DMAX_MAC_HEADER=11

/* Symbol time at 12 SF and 500 BW is 8.19 ms */

/* Timeout (in symbols) between sending an ACK and waiting for a repeated packet */
-DREPEAT_TIMEOUT=100

/* Timeout (in symbols) between sending a packet and waiting for an ack before resending the same packet */
-DACK_TIMEOUT=101//610

/* Timeout (in milliseconds) for the receive window that follows packet tx in a sensor node */
-DRX_WINDOW=0