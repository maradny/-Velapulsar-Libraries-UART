/* Maximum size of Network application payload. Do not change unless
 * protocol changes are reflected in different maximum network
 * application payload size.
 */
-DMAX_NWK_PAYLOAD=4

/* Maximum size of application payload. */
-DMAX_APP_PAYLOAD=5

/* default Link token */
-DDEFAULT_LINK_TOKEN=0x01020304

/* default Join token */
-DDEFAULT_JOIN_TOKEN=0x05060708

/* Remove 'x' corruption to enable vibration interrupt to wake up the SoC */
-DWAKEUP_ON_VIBRATION

-DUART_NUMBER=UART_NUMBER_0
-DUART_LOCATION=UART_LOCATION_1
-DUART_BAUD_RATE=9600
-DUART_FLOW_CONTROL=UART_FLOW_CONTROL_OFF
-DUART_PARITY_MODE=UART_PARITY_NONE
-DUART_STOP_BITS=UART_1_STOP_BIT

/* All the communication command characters */
-DUSTART_CHAR='+'
-DUEND_CHAR='-'
-DSTART_CHAR='*'
-DEND_CHAR='$'

-DLINK_CHAR='L'
-DCONNECT_CHAR='C'
-DDISCONNECT_CHAR='D'
-DMAC_CHAR='@'
-DGOTOSTATE_CHAR='G'
-DRESET_CHAR='R'
-DCHANGEADDR_CHAR='c'
-DSEND_CHAR='s'
-DSEND_ALL_CHAR='S'
-DCHANGE_TIMER_CHAR='T'
-DFAULTY_CHAR='F'
-DPING_CHAR='P'
-DFORWARD_CHAR='>'
-DBEACON_CHAR='B'
-DINSTALL_CHAR='I'

-DLIGHT1_SENSOR=0X01
-DLIGHT2_SENSOR=0X02
-DMAGNETIC_SENSOR=0X04
-DCLAW_SENSOR=0X08
-DPROXIMITY_SENSOR=0X10

/* UART Communication command characters */
-DUSTART_CHAR='+'
-DUEND_CHAR='-'
